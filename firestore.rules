rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow authenticated users to read legend profiles for marketplace
      allow read: if request.auth != null;
      // Allow users to write their own profile (including guest fields)
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Services subcollection - readable by authenticated users
      match /services/{serviceId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Guest Wishlists - guests can manage their own wishlists, podcasts can read them
    match /guestWishlists/{wishlistId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.guestId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.guestId == request.auth.uid;
    }

    // Podcast Guest Wishlists - podcast owners can manage their wishlists, guests can read them
    match /podcastGuestWishlists/{wishlistId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Guest Invites - publicly readable by token, managed via API
    match /guestInvites/{inviteId} {
      allow read: if true; // Needs to be readable by invite link
      allow write: if false; // Only managed via API
    }

    // Matches - users can read their own matches
    match /matches/{matchId} {
      allow read: if request.auth != null && 
        (resource.data.guestId == request.auth.uid || 
         resource.data.podcastOwnerId == request.auth.uid);
      allow write: if false; // Only managed via API
    }

    // Legend applications - users can read their own applications, admins can read all
    match /legend_applications/{applicationId} {
      allow read: if request.auth != null && 
        (resource.data.applicantUid == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if false; // Only created via API
      allow update, delete: if false; // Only updated via admin API
    }

    // Collaborations - users can read their own collaborations
    match /collaborations/{collaborationId} {
      allow read: if request.auth != null && 
        (resource.data.buyerId == request.auth.uid || 
         resource.data.legendId == request.auth.uid ||
         resource.data.guestId == request.auth.uid);
      allow write: if false; // Only managed via API
    }

    // Collaboration Feedback - users can read public feedback, create their own
    match /collaborationFeedback/{feedbackId} {
      allow read: if request.auth != null && 
        (resource.data.isPublic == true || 
         resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.fromUserId == request.auth.uid;
      allow update, delete: if false; // Cannot edit or delete feedback once submitted
    }

    // Reminders - managed via cron jobs only
    match /reminders/{reminderId} {
      allow read: if false;
      allow write: if false; // Only managed via API/cron
    }

    // Podcasts - publicly readable (or auth only), managed via API
    match /podcasts/{podcastId} {
      allow read: if request.auth != null;
      allow write: if false; // Managed via Server Actions
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}