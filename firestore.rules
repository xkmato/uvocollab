rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // TODO: Add admin permissions later
    }

    // Allow read/write for other collections as needed, but for now, restrict
    // This is a placeholder; update as more collections are added
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
